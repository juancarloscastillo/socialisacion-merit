@article{araujo_escuela_2015,
  title = {La Escuela y La Cuestión Del Mérito: Reflexiones Desde La Experiencia Chilena},
  shorttitle = {La Escuela y La Cuestión Del Mérito},
  author = {Araujo, Kathya and Martuccelli, Danilo},
  year = {2015},
