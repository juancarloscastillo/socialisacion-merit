@article{weinstock_Schools_2009,
  title = {Schools as Promoters of Moral Judgment: {{The}} Essential Role of Teachers' Encouragement of Critical Thinking},
  shorttitle = {Schools as Promoters of Moral Judgment},
  author = {Weinstock, Michael and Assor, Avi and Broide, Galia},
